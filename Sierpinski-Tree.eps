%!PS-Adobe-3.0 EPSF-3.0
%%BoundingBox: 0 0 500 500
%%Title: Sierpinski Tree
%%Creator: Mya Macke

% order of fractal
/Order 5 def

% scaling factor with depth
    % 2 / 2^depth
/Scale {
    dup //Order exch sub 2 3 div exch exp dup scale
} bind def

% decrement by 1
/decr {1 sub} bind def

% make n copies on top of stack
/ndup {{dup} repeat} bind def

% rotations
/+ {120 rotate} bind def
/- {-120 rotate} bind def

% branching
/¿ {currentpoint stroke moveto gsave} bind def
/? {stroke grestore} bind def

% draw forward line with scaling
/F {
    Scale
    400 3 div 0 rlineto
    pop
} bind def

% equation Y -> F[+Y][Y][-Y]
/Y {
    dup 0 ne {
        decr 4 ndup F ¿ + Y ? ¿ Y ? ¿ - Y ?
    } if
    pop
} bind def

% initial state
/Start {
    3 ndup ¿ + Y ? ¿ Y ? ¿ - Y ?
    pop
} bind def

% clean lines
1 setlinecap
1 setlinejoin

% drawing
newpath
    % move to start
    250 50 400 3 div add moveto

    % rotate upright
    90 rotate

    % uniform scaling
    1 dup scale

    Order Start
stroke

showpage

%%EOF