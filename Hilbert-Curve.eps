%!PS-Adobe-3.0 EPSF-3.0
%%BoundingBox: 0 0 500 500

% order
/N 5 def

% equation: X -> -YF+XFX+FY- (down right up)
/X {
    dup 0 ne
    {1 sub 7 {dup} repeat - Y F + X F X + F Y -}
    if pop
} def

% equation: Y -> +XF-YFY-FX+ (up right down)
/Y {
    dup 0 ne
    {1 sub 7 {dup} repeat + X F - Y F Y - F X +}
    if pop
} def

% equation: F -> foward line
/F {
    10 0 rlineto
    pop
} bind def

% rotate: - -> 90° clockwise
/- {
    -90 rotate
} bind def

% rotate: + -> 90° counter-clockwise
/+ {
    90 rotate
} bind def

% cleaner lines
1 setlinejoin
1 setlinecap

% drawing
newpath
    % center in box
    50 450 moveto

    % scale down by a factor of 40/((2^N)-1) to constrain final size to 400
    40 2 N exp 1 sub div dup scale

    % create path
    N X
stroke

showpage

%%EOF